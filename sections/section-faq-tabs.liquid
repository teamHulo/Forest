{{ 'section-card-image-text.css' | asset_url | stylesheet_tag }}
<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg }};
}
.main-page-title.page-title.h0 {
    text-align: center;
    font-family: ivyPresto-display;
    font-size: 48px;
    font-style: normal;
    font-weight: 300;
    line-height: 110%;
    text-transform: capitalize;
}
.faq-tabs {
    max-width: 1058px;
    margin: 0 auto;
}
.faq_tab {
    position: relative;
    padding: 18px 0;
    border-bottom: 1px solid #A7A294;
}

.faq_tab .open, .faq_tab .close {
    position: absolute;
    right: 0;
}
.faq_tab[open] .open {
    display: none;
}
.faq_tab summary {
    display: flex;
    align-items: center;
    font-family: acumin-pro;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 150%;
}
</style>
<div class="faq-tabs__wrapper container">
    <div class="faq-tabs element-animation">
        {% for block in section.blocks %}
            <details class="faq_tab" >
                <summary>
                    <span class="close">
                        {% render 'icon-details-close' %}
                    </span>
                    <span class="open">
                        {% render 'icon-details-open' %}
                    </span>
                    {{ block.settings.title }}
                </summary>

                <div class="faq-content ">
                {{ block.settings.text }}
                {% if product.metafields.custom.material != blank %}
                    <p class="element-animation">Material: {{ product.metafields.custom.material }}</p>
                {% endif %}

                </div>
            </details>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name": "FAQ tabs",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "name": "Tab",
            "type": "tab",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Und wie feiert man diese am besten? "
                },
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text",
                    "default": "<p>Mit den Menschen, die einem am wichtigsten sind. Diese besonderen Tage werden nicht nur von den Menschen gepr채gt, mit welchen wir sie verbringen. Nein, wir machen uns bereits lange Zeit zuvor ganz genaue Gedanken dar체ber, womit wir diesen Tag f체llen, damit dieser zu einer perfekten Feier f체r alle wird. Lass uns deine Feier mit erschwinglichem Luxus zum perfekten Tag machen!</p>"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "FAQ tabs"
        }
    ]
}
{% endschema %}