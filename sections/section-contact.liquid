<div class="section-contact">
    <div class="container">
        <div class="section-contact__wrap">
            <div class="image image-left">
                <img src="{{section.settings.img1 | img_url: 'master'}}" alt="">
            </div>
            <div class="contant">
                <div class="title">
                    <h3>
                        {{section.settings.title}}
                    </h3>
                </div>
                <div class="text">
                    {{section.settings.text}}
                </div>
                <div class="contact">
                    <div class="contact-item">
                        <div class="label">
                            <p>
                                {{section.settings.phone}}
                            </p>
                        </div>
                        <div class="phone text">
                            <a href="tel:{{section.settings.phone_name}}">{{section.settings.phone_name}}</a>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="label">
                            <p>
                                {{section.settings.email}}
                            </p>
                        </div>
                        <div class="email text">
                            <a href="email:{{section.settings.email_name}}">{{section.settings.email_name}}</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="image image1">
                <img src="{{section.settings.img2| img_url: 'master'}}" alt="">
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "section-contact",
      "settings": [
        {
          "type": "image_picker",
          "id": "img1",
          "label": "image left"
        },
        {
          "type": "image_picker",
          "id": "img2",
          "label": "image right"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        }, {
          "type": "richtext",
          "id": "text",
          "label": "text"
        } ,
        {
          "type": "text",
          "id": "phone",
          "label": "label phone"
        },
        {
          "type": "text",
          "id": "phone_name",
          "label": "phone"
        },
        {
          "type": "text",
          "id": "email",
          "label": "label email"
        },
        {
          "type": "text",
          "id": "email_name",
          "label": "email"
        }
      ],
      "presets": [
        {
          "name": "section-contact"
        }
      ]
    }
  {% endschema %}