<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
.image-text {
    display: flex;
    gap: clamp(20px, 5.556vw, 80px);
    position: relative;
}
.image-text__left {
    flex: 5;
}
.image-text__right {
    flex: 6;
    display: flex;
    /* justify-content: center; */
    align-items: center;
}
.text__wrapper {
    max-width: {{ section.settings.max_width }}px;
}
.img__wrapper {
    position: relative;
    padding-top: 100%;
}
.img__wrapper img {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    display: block;
    object-fit: cover;
}
.small-img {
    width: 267px;
    height: 330px;
    position: absolute;
    bottom: -25%;
    right: clamp(20px,3.472vw,50px);
}
@media(max-width: 1000px) {
    .small-img {
        display: none;
    }
    .image-text {
        gap: 20px;
    }
}
@media(max-width: 767px) {
    .image-text {
        flex-wrap: wrap;
    }
    .image-text__left {
        width: 100%;
        flex: auto;
    }
    .image-text__right {
        flex: auto;
    }
}
</style>
<div class="image-text__wrapper">
    <div class="image-text container">
        <div class="image-text__left">
            <div class="img__wrapper">
                <img src="{{ section.settings.img | img_url: 'master' }}" alt="">
            </div>
            <img class="small-img" src="{{ section.settings.small_img | img_url: 'master' }}" alt="">
        </div>
        <div class="image-text__right">
            <div class="text__wrapper">
                <h4>{{ section.settings.title }}</h4>
                <div>{{ section.settings.text }}</div>
            </div>
        </div>
    </div>
</div>
