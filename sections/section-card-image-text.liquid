{{ 'section-card-image-text.css' | asset_url | stylesheet_tag }}
<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg }};
}

</style>
<div class="column-card__wrapper container">
    {% for block in section.blocks %}
        <div class="column-card">
            <div class="card" style="max-width: {{ block.settings.max_width }}px;">
                <div class="card__img">
                    <div class="img__wrapper">
                        <img src="{{ block.settings.img | img_url: 'master' }}" alt="">
                    </div>
                </div>
                <div class="card__content">
                    <div class="card__text">
                        <h4>{{ block.settings.title }}</h4>
                        <div>{{ block.settings.text }}</div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% schema %}
{
    "name": "Column card",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background color",
            "default": "#F8F5F0"
        }
    ],
    "blocks": [
        {
            "name": "Card",
            "type": "card",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "img",
                    "label": "Main image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Und wie feiert man diese am besten? "
                },
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text",
                    "default": "<p>Mit den Menschen, die einem am wichtigsten sind. Diese besonderen Tage werden nicht nur von den Menschen gepr채gt, mit welchen wir sie verbringen. Nein, wir machen uns bereits lange Zeit zuvor ganz genaue Gedanken dar체ber, womit wir diesen Tag f체llen, damit dieser zu einer perfekten Feier f체r alle wird. Lass uns deine Feier mit erschwinglichem Luxus zum perfekten Tag machen!</p>"
                },
                {
                    "type": "range",
                    "id": "max_width",
                    "min": 400,
                    "max": 600,
                    "step": 2,
                    "unit": "px",
                    "label": "Text max width",
                    "default": 600
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Column card"
        }
    ]
}
{% endschema %}