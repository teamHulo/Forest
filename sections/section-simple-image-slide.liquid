
{{ 'section-simple-image-slide.css' | asset_url | stylesheet_tag }}

<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
.simple-image-slider__label {
  max-width: {{ section.settings.max_width }}px;
}

</style>
<div class="simple-image-slider">
    <div class="">
        <div class="section-image-slider__wrap">
            <div class="simple-image-slider__label">
              <div class="title">
                  <h4>{{ section.settings.title }}</h4>
              </div>
              <div class="subtitle">
                  <p>{{ section.settings.text }}</p>
              </div>
            </div>
            <s-slider class="swiper">
              <script class="config" type="application/json">
              {
                      "slidesPerView": 5,
                      "pagination": {
                        "el": ".my-swiper-pagination",
                        "clickable": true
                      },
                      "breakpoints": {
                        "100": {
                          "slidesPerView": 1
                        },
                
                        "300": {
                          "slidesPerView": 1.5
                        },
                        "500": {
                          "slidesPerView": 2.5
                        },
                        "767": {
                          "slidesPerView": 3
                        },
                        "900": {
                          "slidesPerView": 4
                        },
                        "1024": {
                          "slidesPerView": 5
                        }
                      }
                  }
              </script>
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                      <div class="swiper-slide" style="height: auto;">
                        <div class="swiper-slide__wrap" style="height: 100%;">
                          <div class="simple-img-wrap">
                              <img src="{{ block.settings.img | img_url: 'master'  }}" 
                              style="width: 100%;"
                                    alt="">
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                </div>
            </s-slider>
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "Simple image slider",
    "settings": [
      {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
      },
      {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
      },
      {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "our bakery"
      },
      {
        "type": "text",
        "id": "text",
        "label": "subtitle",
        "default": "For your special occasions, we create stunning cakes that are produced in our own bakery. You can order a cake from us for any celebration."
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Text max width",
        "min": 0,
        "max": 400,
        "default": 400,
        "step": 5,
        "unit": "px"
      },
      {
        "type": "text",
        "id": "btn_name",
        "label": "btn name",
        "default": "Galerie Ansehen"
      },{
        "type": "url",
        "id": "url",
        "label": "url"
        
      }

    ],
    "blocks": [
      {
        "name": "item",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "image"
          }

        ]
      }
    ],
    "presets": [
      {
        "name": "Simple image slider"
      }
    ]
  }
{% endschema %}