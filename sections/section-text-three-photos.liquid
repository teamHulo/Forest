{{ 'section-text-three-photos.css' | asset_url | stylesheet_tag }}
<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg }};
}
#shopify-section-{{ section.id }} .img__wrapper {
    max-width: {{ section.settings.img_max_width }}px;
}

.three-image__text .text__wrapper {
    max-width: {{ section.settings.max_width }}px;
}

</style>
<div class="three-image__wrapper">
    <div class="three-image container">
        {% if section.settings.order == "text" %}
            <div class="three-image__text">
                <div class="text__wrapper">
                    <h4 class="mb-0 element-animation">{{ section.settings.title }}</h4>
                    <div class="element-animation">{{ section.settings.text }}</div>
                    {% if section.settings.btn_url != blank and section.settings.text_btn != blank %}
                        <a class="a-btn element-animation" href="{{ section.settings.btn_url }}">{{ section.settings.text_btn }}</a>
                    {% endif %}
                </div>
            </div>
            <div class="three-image_images">
                <div class="img__wrapper element-animation">
                    <img src="{{ section.settings.img1 | image_url: height: 400 }}" alt="">
                </div>
                <div style="bottom: {{ section.settings.transform_img }}px;" class="img__wrapper element-animation">
                    <img src="{{ section.settings.img2 | image_url: height: 400 }}" alt="">
                </div>
                <div class="img__wrapper element-animation">
                    <img src="{{ section.settings.img3 | image_url: height: 400 }}" alt="">
                </div>
            </div>
        {% else %}
            <div class="three-image_images" style="gap: 15px;">
                <div class="img__wrapper element-animation">
                    <img src="{{ section.settings.img1 | image_url: height: 400 }}" alt="">
                </div>
                <div style="bottom: {{ section.settings.transform_img }}px;" class="img__wrapper element-animation">
                    <img src="{{ section.settings.img2 | image_url: height: 400 }}" alt="">
                </div>
                <div class="img__wrapper element-animation">
                    <img src="{{ section.settings.img3 | image_url: height: 400 }}" alt="">
                </div>
            </div>
            <div class="three-image__text">
                <div class="text__wrapper">
                    <h4 class="mb-0 element-animation">{{ section.settings.title }}</h4>
                    <div class="element-animation">{{ section.settings.text }}</div>
                    {% if section.settings.btn_url != blank and section.settings.text_btn != blank %}
                        <a class="a-btn element-animation" href="{{ section.settings.btn_url }}">{{ section.settings.text_btn }}</a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% schema %}
{
    "name": "Text plus three photos",
    "settings": [
        {
            "type": "select",
            "id": "order",
            "label": "First block",
            "options": [
                {
                    "label": "Images",
                    "value": "images"
                },
                {
                    "label": "Text",
                    "value": "text"
                }
            ],
            "default": "text"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        },
        {
            "type": "text",
            "id": "text_btn",
            "label": "Text button"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button url"
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background color",
            "default": "#F8F5F0"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Und wie feiert man diese am besten? "
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Mit den Menschen, die einem am wichtigsten sind. Diese besonderen Tage werden nicht nur von den Menschen gepr채gt, mit welchen wir sie verbringen. Nein, wir machen uns bereits lange Zeit zuvor ganz genaue Gedanken dar체ber, womit wir diesen Tag f체llen, damit dieser zu einer perfekten Feier f체r alle wird. Lass uns deine Feier mit erschwinglichem Luxus zum perfekten Tag machen!</p>"
        },
        {
            "type": "range",
            "id": "max_width",
            "min": 400,
            "max": 600,
            "step": 2,
            "unit": "px",
            "label": "Text max width",
            "default": 600
        },
        {
            "type": "image_picker",
            "id": "img1",
            "label": "Image"
        },
        {
            "type": "image_picker",
            "id": "img2",
            "label": "Image"
        },
        {
            "type": "range",
            "id": "transform_img",
            "min": -100,
            "max": 100,
            "step": 5,
            "unit": "px",
            "label": "Tranfrorm vertical axis second image",
            "default": 0
        },
        {
            "type": "image_picker",
            "id": "img3",
            "label": "Image"
        },
        {
            "type": "range",
            "id": "img_max_width",
            "min": 300,
            "max": 500,
            "step": 2,
            "unit": "px",
            "label": "Image max width",
            "default": 324
        }
    ],
    "presets": [
        {
            "name": "Text plus three photos"
        }
    ]
}
{% endschema %}