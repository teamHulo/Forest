{{ 'backery-contact.css' | asset_url | stylesheet_tag }}
<style>
    #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg }};
}
</style>
<div class="backery-contact__wrapper container">
    <div class="backery-contact">
        <div class="contact__img">
            <div class="contact__img-wrapper">
                <img src="{{ section.settings.img | img_url: 'master'  }}" alt="{{ section.settings.img.alt }}">
            </div>
            <div class="contact__img-info">
                <div class="phone">
                    <p>Phone</p>
                    <p>{{ section.settings.phone }}</p>
                </div>
                <div class="email">
                    <p>Email</p>
                    <p>{{ section.settings.email }}</p>
                </div>
            </div>
        </div>
        <div class="contact__form">
            {% form 'contact' %}
                {{ form.errors | default_errors }}

                <h3 class="mb-0 mt-0">{{ section.settings.title }}</h3>
                <p class="mt-0">{{ section.settings.text }}</p>
                <div class="input-group">
                    <div class="email">
                        <input type="email" name="contact[email]" id="email" placeholder="Your Name" />
                    </div>
                    
                    <div class="phone">
                        <input type="tel" name="contact[phone]" id="phone" placeholder="Phone" />
                    </div>
                </div>
              
                <div class="message">
                  <textarea rows="6" name="contact[body]" id="message" placeholder="Requests for ordering"></textarea>
                </div>
              
                <div class="submit">
                  <input type="submit" value="Send an Application" />
                </div>
            {% endform %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Backery contact",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Paffing top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background color",
            "default": "#F8F5F0"
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "phone",
            "label": "Phone number",
            "default": "+1 343 343 33 22"
        },
        {
            "type": "text",
            "id": "email",
            "label": "email",
            "default": "info@forestevents.com"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title on form",
            "default": "Order Cake"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Description on form",
            "default": "Fill out the contact </br> form or contact us using the contacts below"
        }
        
    ],
    "presets": [
        {
            "name": "Backery contact"
        }
    ]
}
{% endschema %}