        <div class="image">
            <div class="image__wrap">
                <img src="{{img | img_url: 'master'}}" alt="">
            </div>
        </div>
        <div class="title">
            <h4>
                {{title}}
            </h4>
        </div>
        <div class="text">
            <p>
                {{text}}
            </p>
        </div>
        <div class="item-btn">
            <a href="{{url}}" class="a-btn">{{btn_name}}</a>
        </div>
    </div>
</div>