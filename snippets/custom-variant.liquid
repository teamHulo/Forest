<style>
    .variant {
        display: inline-block;
        margin-right: 15px;
    }
    .color-content a {
        text-decoration: none;
        color: inherit;
        display: flex;
        align-items: center;
        position: relative;
        padding-left: 25px;
    }
    .color-content a:not(.active):hover::before {
        position: absolute;
        content: "";
        left: -2px;
        width: 24px;
        height: 24px;
        border: 1px solid #6d5f52;
        border-radius: 50px;
    }
    .color-content a::before {
        transition: all 0.3s;
        content: "";
        width: 20px;
        height: 20px;
        border-radius: 50px;
        background-color: #D9C8B8;
        position: absolute;
        left: 0;
    }
    .active::after {
        position: absolute;
        content: "";
        left: -3px;
        width: 26px;
        height: 26px;
        border: 1px solid #6d5f52;
        border-radius: 50px;
    }
</style>
<div class="color">
    <div class="color-label">Color:</div>
    <div class="color-content">
        <div class="variant">
            <a class="active" href="{{ curent.url }}">{{ curent.metafields.custom.color }}</a>
        </div>
        {% for item in list %}
            <div class="variant">
                <a href="{{ item.url }}">{{ item.metafields.custom.color }}</a>
            </div>
        {% endfor %}
    </div>
</div>